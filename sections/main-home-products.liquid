{{ 'main-home-products.css' | asset_url | stylesheet_tag }}

<section class="main-home-products">

  <div class="box-content">
    <div class="box-slides">

      {% for product in section.settings.collection.products limit: 4 %}
        <div class="slide">
          {% render 'card-product', card_product: product %}
        </div>
      {% endfor %}
      
    </div>

    <div class="box-action">
      <a href="{{ section.settings.collection.url  }}">
        {{ section.settings.text_btn}}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z"/></svg>
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Produtos",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Coleção"
    },
    {
      "type": "text",
      "id": "text_btn",
      "label": "Texto botão",
      "default": "Ver todas as novidades"
    }
  ]
}
{% endschema %}
